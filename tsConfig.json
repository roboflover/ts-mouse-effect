{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"noImplicitAny": false,
        "noUnusedLocals": false,
		"noEmit": true,
		"allowJs": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
		"typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types"
		]
		// "types": [
		// 	"Phaser"
		// ]
	  },
      "include": [
        "**/*",
        "node_modules/phaser3-rex-plugins-types"
    ]
}